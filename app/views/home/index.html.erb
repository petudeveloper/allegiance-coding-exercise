<nav class="text-right">
  <% if user_signed_in? %>
    <%= @user.name %>
    <%= link_to 'Log out', destroy_user_session_path, method: "delete" %>  
  <% else %>
    <%= link_to 'Log in', new_user_session_path %>  
    <%= link_to 'Sing Up', new_user_registration_path %>  
  <% end %>
</nav>
<div class="text-center">
  <h1>Welcome to Requests</h1>
  <% if @user.admin? %>
    <p><strong>Admin:</strong> <%= @user.admin? %></p>
  <% else %>
    <div class="my-4 d-flex justify-content-center">
      <form>
        <div class="form-group">
          <label for="request">Write your technical to system admin request here:</label><br>
          <textarea  type="text" id="request" name="request" rows="10" cols="50"></textarea >
        </div>
        <div class="actions">
          <button class="btn btn-primary">Send</button>
        </div>
    </div>
  <% end %>
</div>
