<h1 class="text-center">New Request</h1>
<div class="my-4 d-flex justify-content-center text-left">
  <%= form_with model: @request do |form| %>
    <div class="form-group">
      <%= form.label :subject, "Subject:" %><br>
      <%= form.text_field :subject %>
    </div>

    <div class="form-group">
      <%= form.label :body, "Write your technical request to system admin here:" %><br>
      <%= form.text_area :body, size: "70x5" %>
    </div>

    <div class="actions">
      <%= form.submit "Send", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>